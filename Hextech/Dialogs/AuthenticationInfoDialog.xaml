<Window x:Class="Hextech.Dialogs.AuthenticationInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hextech.Dialogs"
        mc:Ignorable="d"
        Title="AuthenticationInfoDialog" Height="140" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Password"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Port"/>

        <TextBox Grid.Row="0" Grid.Column="1" Background="Transparent" BorderThickness="0" Text="{Binding Password, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap"/>
        <TextBox Grid.Row="1" Grid.Column="1" Background="Transparent" BorderThickness="0" Text="{Binding Port, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
