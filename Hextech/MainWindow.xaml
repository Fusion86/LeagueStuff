<Window x:Class="Hextech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hextech"
        xmlns:vm="clr-namespace:Hextech.ViewModels"
        mc:Ignorable="d"
        Title="Hextech" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowViewModel x:Name="vm"/>
    </Window.DataContext>

    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding AppVersionString}"/>
            </StatusBarItem>

            <StatusBarItem>
                <TextBlock Text="{Binding LeagueVersionString}"/>
            </StatusBarItem>
        </StatusBar>

        <Frame Content="{Binding Content}">
            
        </Frame>
    </DockPanel>
</Window>
