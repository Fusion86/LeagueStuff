<Page x:Class="Hextech.Pages.ChampionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hextech.Pages"
      xmlns:input="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChampionsPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <input:AutoCompleteBox ItemsSource="{Binding Champions}" SelectedItem="{Binding SelectedChampion}" IsTextCompletionEnabled="True" Placeholder="Open new tab for champion" ValueMemberPath="Name" KeyUp="AutoCompleteBox_KeyUp">

        </input:AutoCompleteBox>

        <TabControl Grid.Row="1" ItemsSource="{Binding ChampionPages}">
            
        </TabControl>
    </Grid>
</Page>
